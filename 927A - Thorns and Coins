#include<iostream>
using namespace std;
 
int main()
{
	int t;
	cin >> t;
 
	while (t--)
	{
		int n, coins = 0;
		cin >> n;
		string s;
		cin >> s;
		for (int i = 0; i < n; i++)
		{
			if (s[i] == '.')
			{
				continue;
			}
			if (s[i] == '@')
			{
				coins++;
			}
			if (s[i] == '*' && s[i + 1] == '*')
			{
				break;
			}
			else
				continue;
		}
		cout << coins << endl;
	}
}
