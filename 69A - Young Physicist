#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int x1=0;
    int y2=0;
    int z3=0;
    for(int i=0; i<n; i++){
        int x,y,z;
        cin>>x>>y>>z;
        x1 += x;
        y2 += y;
        z3 += z;
    }
        if(x1 != 0 || y2 != 0 || z3 != 0 ){
            cout<<"NO";
            return 0;
        }
    cout<<"YES";
}
